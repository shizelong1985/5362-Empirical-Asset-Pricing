\begin_body

\begin_layout Standard
Campbell-Shiller 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
1+r_{t+1} & =\frac{P_{t+1}+D_{t+1}}{P_{t}}\Leftrightarrow P_{t}=\frac{\mathbb{E}_{t}\left(P_{t+1}+D_{t+1}\right)}{1+\mathbb{E}_{t}\left(r_{t+1}\right)}\\
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Consider 
\begin_inset Formula $\mathbb{E}_{t}\left(r_{t+1}\right)=k\;\forall\;t$
\end_inset

 and 
\begin_inset Formula $\Theta=\frac{1}{1+k}$
\end_inset

 then
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
P_{t} & =\mathbb{E}_{t}\left(P_{t+1}+D_{t+1}\right)\Theta\\
 & =\Theta\mathbb{E}_{t}\left(P_{t+1}\right)+\Theta\mathbb{E}_{t}\left(D_{t+1}\right)\\
 & =\Theta\mathbb{E}_{t}\left(\mathbb{E}_{t}\left(P_{t+2}+D_{t+2}\right)\Theta\right)+\Theta\mathbb{E}_{t}\left(D_{t+1}\right)\\
 & \vdots
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Imposing the transversality condition (no bubble)
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\lim_{h\rightarrow\infty}\Theta^{h}\mathbb{E}_{t}\left(P_{t+h}\right)=0
\]

\end_inset


\end_layout

\begin_layout Standard
Then
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
P_{t}=\sum_{h=1}^{\infty}\Theta^{h}\mathbb{E}_{t}\left(D_{t+h}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
Allowing for time varying expected returns (instead of 
\begin_inset Formula $\mathbb{E}_{t}\left(r_{t+1}\right)=k\;\forall\;t$
\end_inset

)
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
P_{t}=\mathbb{E}_{t}\left[\sum_{h=1}^{\infty}\left(\prod_{j=1}^{h}\Theta_{t+j}\right)D_{t+h}\right].
\]

\end_inset


\end_layout

\begin_layout Standard
Campbell and Shiller(1988)propose an approximate log linear present value
 model.
 Start from the definition of log returns
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
r_{t+1} & =\ln\left(P_{t+1}+D_{t+1}\right)-\ln\left(P_{t}\right)\\
 & =\ln\left(1+\frac{D_{t+1}}{P_{t+1}}\right)-\ln\left(P_{t}\right)\\
 & =p_{t+1}-p_{t}+\ln\left(1+\frac{d_{t+1}}{p_{t+1}}\right)
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Recall
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\ln\left(1+\frac{d_{t+1}}{p_{t+1}}\right)=\ln\left(1+e^{d_{t+1}-p_{t+1}}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
The last term is a non linear function of the log dividend-price ratio.Taking
 a first-order Taylor approximation yields the following approximation
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\ln\left(1+\frac{d_{t+1}}{p_{t+1}}\right)\approx\ln\left(1+e^{\overline{d-p}}\right)+\frac{1}{1+e^{\overline{d-p}}}e^{\overline{d-p}}\left(d_{t+1}-p_{t+1}-\left(\overline{d-p}\right)\right)
\]

\end_inset


\end_layout

\begin_layout Standard
Let 
\begin_inset Formula $\phi=\frac{1}{1+e^{\overline{d-p}}}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\ln\left(1+\frac{d_{t+1}}{p_{t+1}}\right) & \approx\underbrace{-\ln\left(\phi\right)-\left(1-\phi\right)\ln\left(\frac{1}{\phi}-1\right)}_{\kappa}+\left(1-\phi\right)\left(d_{t+1}-p_{t+1}\right)\\
 & =\kappa+\left(1-\phi\right)\left(d_{t+1}-p_{t+1}\right)
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
A high price today reflect low returns tomorrow or high dividends in the
 following period.
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
r_{t+1}\approx p_{t+1}-p_{t}+\kappa+\left(1-\phi\right)\left(d_{t+1}-p_{t+1}\right)
\]

\end_inset


\end_layout

\end_body
